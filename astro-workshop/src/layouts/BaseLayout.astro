---
import "@/styles/global.css";
import "@/styles/introduction.css";

const baseUrl = import.meta.env.BASE_URL;

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "My Bearnie App", 
  description = "Built with Astro, Tailwind CSS, and Bearnie components" 
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&family=DM+Sans:wght@400;500;600;700&family=Fraunces:opsz,wght@9..144,400;9..144,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <slot />

    <script>
      const STORAGE_KEY = "workshop-theme";

      function applyTheme(theme) {
        const root = document.documentElement;
        if (theme === "dark") root.classList.add("dark");
        else root.classList.remove("dark");
      }

      try {
        const saved = localStorage.getItem(STORAGE_KEY);
        // Default to light mode unless the user explicitly picked a theme.
        applyTheme(saved ?? "light");
      } catch {
        applyTheme("light");
      }

      window.__toggleTheme = function () {
        const root = document.documentElement;
        const next = root.classList.contains("dark") ? "light" : "dark";
        try {
          localStorage.setItem(STORAGE_KEY, next);
        } catch {}
        applyTheme(next);
      };
    </script>
  </body>
</html>
