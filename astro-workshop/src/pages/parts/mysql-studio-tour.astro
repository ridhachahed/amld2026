SELECT sys.ML_EMBED_ROW(
  "Which invoice mentions breakfast being included?",
  JSON_OBJECT("model_id", "multilingual-e5-small")
) INTO @query_vec;</pre>

          <div class="section-label" style="margin-top:18px;">Step 2</div>
